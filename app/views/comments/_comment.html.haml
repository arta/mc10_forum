.comment.clearfix
  .contents
    %p.comment-content= comment.comment
    %p.comment-author
      By
      =comment.user.email

  -if current_user == comment.user
    .buttons
      =link_to 'Edit', [:edit, comment.post, comment]
      =link_to 'Delete', [comment.post, comment], method: :delete, data:{ confirm:'Are you sure?' }
