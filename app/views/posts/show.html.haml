#post-content
  .post
    %h1.title= @post.title
    %p.date
      Posted
      =time_ago_in_words @post.created_at
      by
      =@post.user.email
    %p.content= @post.content

    -if @post.user == current_user
      %p
        =link_to 'Back', posts_path
        =link_to 'Edit', [:edit, @post]
        =link_to 'Delete', @post, method: :delete, data:{ confirm:'Are you sure?' }
