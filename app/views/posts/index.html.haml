#posts
  -@posts.each do |post|
    .post
      %h2.title= link_to post.title, post
      %p.date
        Posted
        =time_ago_in_words post.created_at
        by
        =post.user.email
      %p
        =link_to 'Edit', [:edit, post]
        =link_to 'Delete', post, method: :delete, data:{ confirm:'Are you sure?' }
